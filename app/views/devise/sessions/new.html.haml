.account-page
  = render "shared/user-header"
  .account-page__contents
    .account-page__contents__title
      .login-acount
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_registration_path(resource_name), class: 'registration-btn'
      .login-api
        = link_to 'Facebookで登録', user_facebook_omniauth_authorize_path, method: :post, class: 'facebook-btn'
        .icon
          = icon 'fab', 'facebook-square', class: 'facebook-icon', class: "fa-inverse"
        = link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post, class: 'google-btn'
        = image_tag 'google-icon', class: 'google-icon', alt: 'google-icon', size: "25x25"
        
      .login-inner
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = devise_error_messages!
          .field-label
            = f.label :メールアドレス
          .field-input
            = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
          .field-label
            = f.label :パスワード
          .field-input
            = f.password_field :password, autocomplete: "off", placeholder: '7文字以上の半角英数字'
          .actions
            = f.submit "ログイン", class: 'btn' 

  = render "shared/user-footer"

  